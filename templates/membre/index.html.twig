        <div class="card-header border-0">
        <h3 class="mb-0">Les mutualistes <a href="{{ path('membre_new') }}" class="btn btn-primary">Ajouter de nouveau</a> </h3>
        </div>
        <!-- Light table -->
        <div class="table-responsive">
          <table class="table align-items-center table-flush">
            <thead class="thead-light">
                <tr>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Sex</th>
                <th scope="col">Grade</th>
                <th scope="col">Adresse</th>
                <th scope="col">Work_place</th>
                <th scope="col">Date_birth</th>
                <th scope="col">Phone_number</th>
                <th scope="col" class="sort" data-sort="status">Status</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody class="list">

            {% for membre in membres %}
                <tr>
                    <td>{{ membre.firstname }}</td>
                    <td>{{ membre.lastname }}</td>
                    <td>{{ membre.sex }}</td>
                    <td>{{ membre.grade }}</td>
                    <td>{{ membre.email }}</td>
                    <td>{{ membre.adresse }}</td>
                    <td>{{ membre.workPlace }}</td>
                    <td>{{ membre.dateBirth ? membre.dateBirth|date('Y-m-d') : '' }}</td>
                    <td>
                        <span class="badge badge-dot mr-4">
                            <i class="bg-success"></i>
                            <span class="status">{{ membre.sateMember }}</span>
                        </span>
                    </td>

                    <td class="text-right">
                    <div class="dropdown">
                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                            <a href="{{ path('membre_show', {'id': membre.id}) }}" class="btn btn-primary">Afficher</a>
                            <a href="{{ path('membre_edit', {'id': membre.id}) }}" class="btn btn-primary">editer</a>
                        </div>
                    </div>
                    </td>
                  
                </tr>
                {% else %}
                <tr>
                    <td colspan="18">no records found</td>
                </tr>
                {% endfor %}
              
            </tbody>
          </table>
        </div>
        <!-- Card footer -->
        <div class="card-footer py-4">
          <nav aria-label="...">
            <ul class="pagination justify-content-end mb-0">
              <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">
                  <i class="fas fa-angle-left"></i>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <li class="page-item active">
                <a class="page-link" href="#">1</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
              </li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#">
                  <i class="fas fa-angle-right"></i>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
