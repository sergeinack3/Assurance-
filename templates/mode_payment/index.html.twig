{% extends 'base.html.twig' %}

{% block title %}ModePayment index{% endblock %}

{% block body %}
<div class="row"> 

<div class="col">
<div class="card">
    <!-- Card header -->
    <div class="card-header border-0">
        <h3 class="mb-0">Les Modes de Payment 
            <a href="{{ path('mode_payment_new') }}" class="btn btn-primary ml-3" data-toggle="modal" data-target="#modepayment" > 
                Ajouter Un Mode de Payment
            </a> 
        </h3> 
    </div>

     <!-- Light table -->
        <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mode_payment in mode_payments %}
            <tr>
                <td>{{ mode_payment.id }}</td>
                <td>{{ mode_payment.libelle }}</td>
                <td>{{ mode_payment.description }}</td>
                
                    <td class="text-right">
                        <div class="dropdown">
                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow p-4">
                                <a href="{{ path('mode_payment_show', {'id': mode_payment.id}) }}"class="btn btn-primary">Afficher</a>
                                <a href="{{ path('mode_payment_edit', {'id': mode_payment.id}) }}" class="btn btn-primary">editer</a>
                                <a class="btn">{{ include('mode_payment/_delete_form.html.twig') }}</a>
                            </div>
                        </div>
                    </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<!-- Card footer -->
<div class="card-footer py-4">
  <nav aria-label="...">
    <a href="{{ path('mode_payment_new') }}" class="btn btn-primary">
      Créer un Mode De Payement
    </a>
    <ul class="pagination justify-content-end mb-0">
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1">
          <i class="fas fa-angle-left"></i>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <li class="page-item active">
        <a class="page-link" href="#">1</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
      </li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#">
          <i class="fas fa-angle-right"></i>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </nav>
</div>
</div>  
</div>

