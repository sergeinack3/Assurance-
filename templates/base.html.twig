<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Murcas-Fasas {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- Favicon -->
            <link rel="icon" href={{ asset('assets/img/brand/favicon.png') }} type="image/png">
            <!-- Fonts -->
            <link rel="stylesheet" href={{ asset('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700') }}>
            <!-- Icons -->
            <link rel="stylesheet" href={{ asset('assets/vendor/nucleo/css/nucleo.css') }} type="text/css">
            <link rel="stylesheet" href={{ asset('assets/vendor/@fortawesome/fontawesome-free/css/all.min.css') }} type="text/css">
            <!-- Argon CSS -->
            <link rel="stylesheet" href={{ asset('assets/css/argon.css?v=1.2.0') }} type="text/css">
        {% endblock %}

        {% block javascripts %}
            <!-- Argon Scripts -->
            <!-- Core -->
            <script src={{ asset('assets/vendor/jquery/dist/jquery.min.js') }}></script>
            <script src={{ asset('assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js') }}></script>
            <script src={{ asset('assets/vendor/js-cookie/js.cookie.js') }}></script>
            <script src={{ asset('assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js') }}></script>
            <script src={{ asset('assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js') }}></script>
            <!-- Argon JS -->
            <script src={{ asset('assets/js/argon.js?v=1.2.0') }}></script>
        {% endblock %}
    </head>
    <body>

        {{ include('layout/partials/_sidebar.html.twig') }}

        <!-- Main content -->
        <div class="main-content" id="panel">
            {{ include('layout/partials/_navbar.html.twig') }}

            <div class="header bg-primary pb-6">
                <div class="container-fluid">
                        <!-- nav header content -->
                        <div class="header-body">
                        {{ include('layout/partials/_nav_cart.html.twig') }}

                        {{ include('layout/partials/_cart_nav.html.twig') }}

                        </div>
                </div>
            </div>

            <!-- Page content -->
            <div class="container-fluid mt--6">

                {% block body %}
                


                {% endblock %}
                    
            </div>
            
        </div>

    </body>
</html>
